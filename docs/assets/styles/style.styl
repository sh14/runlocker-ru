*
  box-sizing: border-box


html
  height: 100%


body
  font-family: 'Open Sans', Tahoma, Arial, sans-serif
  font-weight: 300
  padding: 0px
  margin: 0px
  font-size: 18px
  line-height: 25px
  height: 100%
  background: url("../images/background_1.jpg") 50% 0% / 100% 100% repeat-y rgb(23, 120, 169)
  padding-top: 2em
  color: rgb(102, 102, 102)


h1, h2, h3, h4, h5, h6
  margin: 0px
  padding: 0px
  color: rgb(68, 68, 68)
  text-shadow: none
  font-weight 300
  word-break: break-all;


h1
  font-size: 3em
  line-height: 1.2em


h2
  font-size: 1.8em
  line-height: 1.4em
  margin: 20px 0px


h3
  font-size: 1.4em
  line-height: 1.4em


h4
  font-size: 1.2em
  line-height: 1.4em


h5
  font-size: 1.1em
  line-height: 1.4em


h6
  font-size: 1em
  line-height: 1.2em


h1 a, h2 a, h3 a, h4 a, h5 a, h6 a
  text-decoration: none


img
  max-width: 100%
  height: auto
  border: none

a:hover img
  opacity: 0.7


ol, ul
  margin: 0px 0px 20px


table
  border-spacing: 0px
  border-collapse: collapse
  margin-bottom: 20px
  width: 100%
  max-width: 100%


li
  color: rgb(68, 68, 68)
  margin-bottom: 10px


p
  padding: 0px 0px 1em
  margin: 0px


a
  color: dodgerblue
  transition: color 0.2s ease, border-bottom-color 0.2s ease
  text-decoration: none


  &:hover
    text-decoration: underline
    color: RoyalBlue


.button
  color: dodgerblue
  transition: color 0.2s ease, border-bottom-color 0.2s ease
  text-decoration: none
  position: relative
  z-index: 99


  &:after
    position: absolute
    content: ""
    height: 0.3em
    bottom: 0.4em
    left: 1em
    right: 1em
    display: block
    z-index: -1
    background: #000
    border-radius: 1em
    box-shadow: 0 0 0.5em 0.5em #000
    opacity: 0.5

  &, &:visited
    padding: 1em 1.5em
    margin-left: auto
    margin-right: auto
    font-size: 1em
    line-height: 4em
    border: 1px solid rgb(34, 110, 172)
    color: rgb(255, 255, 255)
    text-shadow: rgba(0, 0, 0, 0.2) 0px -1px
    border-radius: 4px
    text-decoration: none
    background-image: -webkit-linear-gradient(top, rgb(83, 197, 225), rgb(58, 162, 203))
    background-color: rgb(83, 197, 225)


  &:hover, &:focus, &:active
    text-decoration: none
    background-image: -webkit-linear-gradient(top, rgb(58, 162, 203), rgb(83, 197, 225))
    background-color: rgb(22, 140, 206)


.warning
  border: 2px solid red
  margin: 20px 0
  padding: 20px
  color: red
  text-align: center


  &__title
    color: red
    font-weight: 700


.page
  margin: auto
  width: 100%;
  max-width: 800px;

  &__box
    padding: 20px
    box-shadow: rgba(0, 0, 0, 0.1) 0px 0px 2px 2px
    color: rgb(102, 102, 102)
    border-radius: 4px
    background: rgb(255, 255, 255)


.align-center
  text-align: center
  clear: both
  display: table
  margin-left: auto
  margin-right: auto


img.align-center
  margin-bottom: 20px


.fa-check
  color: #07ca07


.fa-times
  color: #f6dde4


.difference
  border-collapse: collapse
  font-size: 0.8em;
  @media (min-width 768px)
    font-size: 1em;

  tr

    &:hover, &:focus
      color: rgb(68, 68, 68)
      background: rgba(200, 200, 200, .1)


    td
      border-top-width: 1px
      border-top-style: solid
      border-top-color: rgba(0, 0, 0, 0.05)
      text-align: center
      width: 8%
      vertical-align: middle
      position: relative

      &:first-child
        text-align left


    &:first-child
      td
        b
          text-align: center
          font-size: 0.8em
          padding: 5px 10px
          border: 1px solid rgb(204, 204, 204)
          text-shadow: rgba(0, 0, 0, 0.2) 0px -1px
          border-radius: 4px
          position: absolute
          top: 100%
          right: 50%
          display: block
          opacity: 0
          z-index: 99
          line-height: 1
          white-space: nowrap
          background: rgb(255, 255, 187)


        &:hover, &:focus
          b
            opacity: 1
            right: 0%

        &:first-child
          text-align: left
          font-size: 0.8em
          width: auto
          color: #222


.info-block
  padding-left: 0px
  list-style: none


  li
    padding: 20px
    margin: 20px 0px
    border-width: 1px 1px 1px 5px
    border-style: solid
    border-color: rgb(238, 238, 238)
    border-radius: 0 3px 3px 0
    background: rgb(255, 255, 255)
    border-left-color: rgb(91, 192, 222)

    p
      padding: 0px

.warning-block

  b
    color: rgb(255, 0, 0)


.caution
  line-height: 1.2
  color: rgb(0, 0, 0)
  font-size: .8em
  text-align center

  b
    font-size: 1.2em
    text-transform: uppercase


.links-block
  list-style: none
  margin: 0px
  padding: 10px
  text-align: left
  font-size: .8em
  border: 1px dashed rgb(212, 212, 148)
  background: rgb(255, 255, 204)


  li
    margin: 0px
    line-height: 3

    a
      font-weight: bold
      color: black

      &:hover
        color: DarkSlateGray


.hash
  font-size: .8em
  line-height: 1.2


.header
  display: flex
  justify-content: space-between
  background-color: #fff
  border-bottom: solid 1px rgba(160, 160, 160, 0.3)
  left: 0
  position: fixed
  top: 0
  width: 100%
  z-index: 10000
  line-height 1

  .logo
    height: 50px;
    line-height: inherit;
    width: auto;
    transition: all 0.5s ease;
    display: block;
    padding: 10px;

    img
      display: block;
      height: 100%;
      width: auto;
      position: relative;
      top: -7px;


.navigation

  &__list
    -moz-flex: 1
    -webkit-flex: 1
    -ms-flex: 1
    flex: 1
    border-left: solid 1px rgba(160, 160, 160, 0.3)
    line-height: inherit
    list-style: none
    margin: 0
    padding-left: 0
    -moz-transition: color, opacity, height 0.5s ease
    -webkit-transition: color, opacity, height 0.5s ease
    -ms-transition: color, opacity, height 0.5s ease
    transition: color, opacity, height 0.5s ease
    display: flex
    align-items: center
    height: 100%

    &_show
      position: absolute;
      right: 0;
      top: 100%;
      display: block;
      background: #fff;
      z-index: 999999999;
      height: auto;
      border-style: solid;
      border-width: 1px;
      border-color: #e2e2e2;

  &__item
    border-left: solid 1px rgba(160, 160, 160, 0.3)
    line-height: inherit
    margin: 0
    padding: 0
    @media (max-width 890px)
      display none

    &:first-child, &:last-child
      border none

    &_show
      display block

    &_bars
      display: none
      @media (max-width 890px)
        display block

      &_show
        display: block
        position: absolute;
        right: -1px;
        bottom: calc(100% + 1px)

    &_active
      margin: 0

  &__link
    display: block;
    border-bottom: 0
    font-size: 0.7em
    font-weight: 400
    letter-spacing: 0.15em
    text-transform: uppercase
    padding: 19px
    color: #333

    &:hover, &:focus, &:active
      text-decoration none

    &_active
      color: lightblue


.footer
  color: rgba(255, 255, 255, 0.498039)
  text-decoration: none
  font-size: 0.8em


  &__text
    padding: 20px 10px
    line-height: 1.4
    text-align: center


.awards
  width: 100%
  display: flex
  flex-direction: row
  justify-content: space-between
  align-items: center
  text-align: center
  flex-wrap: wrap

  &__cell
    width: calc(100% / 3)
    padding: 10px

    @media screen and (min-width: 736px)
      width: calc(100% / 5)

  &__image
    max-width: 100%
    height: auto


#vk_comments,
#vk_comments iframe, .vk_widget_comments, .vk_widget_comments iframe
  width: 100% !important
